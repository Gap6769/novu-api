{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8001"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/webnovel-manager-api"
            }
        },
        {
            "name": "FastAPI (Remote Debug)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "-s",
                "--log-cli-level=ERROR"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/webnovel-manager-api",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/webnovel-manager-api",
                "MONGODB_URL": "mongodb://localhost:27017",
                "MONGODB_DB_NAME": "webnovel_test",
                "ENVIRONMENT": "test"
            }
        },
        {
            "name": "Python: Pytest Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s",
                "--log-cli-level=DEBUG"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/webnovel-manager-api",
            "python": "${workspaceFolder}/webnovel-manager-api/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/webnovel-manager-api",
                "MONGODB_URL": "mongodb://localhost:27017",
                "MONGODB_DB_NAME": "webnovel_test",
                "ENVIRONMENT": "test"
            }
        }
    ]
} 