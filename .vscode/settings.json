{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit"
    },
    "ruff.enabled": true,
    "ruff.importStrategy": "fromEnvironment",
    "ruff.run": "onType",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
        "**/.ruff_cache": true
    }
} 